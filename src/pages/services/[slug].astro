---
import MainLayout from '../../layouts/MainLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map((service) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

interface Props {
  service: CollectionEntry<'services'>;
}

const { service } = Astro.props;
const { Content } = await service.render();

const allServices = await getCollection('services');
const otherServices = allServices
  .filter(s => s.slug !== service.slug)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);
---

<MainLayout
  title={service.data.metaTitle || `${service.data.title} Services | Living Stone Contractors`}
  description={service.data.metaDescription || service.data.description}
  image={service.data.image}
>
  <!-- Hero Section -->
  <section class="relative py-24 bg-gray-900">
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/50 z-10"></div>
    <div
      class="absolute inset-0 bg-cover bg-center"
      style={`background-image: url('${service.data.image}');`}
    ></div>

    <div class="container-custom relative z-20 text-white">
      <div class="max-w-3xl">
        <h1 class="font-heading font-bold mb-6">{service.data.title}</h1>
        <p class="text-xl">{service.data.description}</p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <article class="prose prose-lg max-w-none">
            <Content />
          </article>
        </div>

        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <!-- Contact Card -->
          <div class="card p-8 sticky top-24">
            <h3 class="font-heading font-bold text-2xl mb-4">Get Started Today</h3>
            <p class="text-gray-600 mb-6">
              Ready to begin your {service.data.title.toLowerCase()} project? Contact us for a free estimate.
            </p>

            <div class="space-y-4 mb-6">
              <a
                href="tel:+1234567890"
                class="flex items-center gap-3 text-gray-700 hover:text-primary-600 transition-colors"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-500">Call Us</p>
                  <p class="font-semibold">(123) 456-7890</p>
                </div>
              </a>

              <a
                href="mailto:info@livingstonecontractors.com"
                class="flex items-center gap-3 text-gray-700 hover:text-primary-600 transition-colors"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="text-sm text-gray-500">Email Us</p>
                  <p class="font-semibold break-all">info@livingstonecontractors.com</p>
                </div>
              </a>
            </div>

            <a href="/contact" class="btn btn-primary w-full text-center">
              Request Free Estimate
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Other Services Section -->
  {otherServices.length > 0 && (
    <section class="section-padding bg-gray-50">
      <div class="container-custom">
        <h2 class="text-3xl font-heading font-bold mb-8 text-center">Other Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {otherServices.map((otherService) => (
            <a
              href={`/services/${otherService.slug}`}
              class="card overflow-hidden group block"
            >
              <div class="relative h-48 overflow-hidden bg-gray-200">
                <img
                  src={otherService.data.image}
                  alt={otherService.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <div class="absolute bottom-4 left-4">
                  <h3 class="text-white font-heading font-bold text-xl">{otherService.data.title}</h3>
                </div>
              </div>
              <div class="p-6">
                <p class="text-gray-600 line-clamp-2">{otherService.data.description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</MainLayout>

<style>
  .prose {
    @apply text-gray-700;
  }

  .prose h2 {
    @apply text-3xl font-heading font-bold text-gray-900 mt-8 mb-4;
  }

  .prose h3 {
    @apply text-2xl font-heading font-bold text-gray-900 mt-6 mb-3;
  }

  .prose h4 {
    @apply text-xl font-heading font-bold text-gray-900 mt-4 mb-2;
  }

  .prose p {
    @apply mb-4;
  }

  .prose ul {
    @apply list-disc pl-6 mb-4 space-y-2;
  }

  .prose ol {
    @apply list-decimal pl-6 mb-4 space-y-2;
  }

  .prose a {
    @apply text-primary-600 hover:text-primary-700 underline;
  }
</style>
